{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "jsx": "react-native",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "types": [
    "jest"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**/*"
  ]
}
