<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#2B5F8F"
                android:centerColor="#1E7FA0"
                android:endColor="#1E88A8"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Logo centralizado -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/splashscreen_logo" />
    </item>
</layer-list>
